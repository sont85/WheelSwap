<div class='container'>
  <div class="row">
    <h1 class='pendingheader'>Offer A Car</h1>
    <div class="col-sm-4 col-sm-offset-1 box">
      <img ng-src='{{selectedCar.imageUrl}}' class="marketplaceimg">
      <div class='boxblock'>
        <ul class='desiredinfo'>
          <li>Make/Model: {{selectedCar.model}}</li>
          <li>Year: {{selectedCar.year}}</li>
          <li>Condition: {{selectedCar.condition}}</li>
          <li>Color: {{selectedCar.color}}</li>
        </ul>
      </div>
    </div>
    <div class="col-sm-3 col-sm-offset-2 offerbutton" ng-repeat="car in myCars">
      <button class='btn btn-primary' ng-click="myCarToTrade(selectedCar, car)">Trade Car</button>
      <span class="mycartooffer">{{car.year}} {{car.model}}</span>
    </div>
  </div>
</div>
